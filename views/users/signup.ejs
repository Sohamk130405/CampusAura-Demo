<% layout('/layouts/boilerplate') -%>
<div class="row mt-3 offset-lg-3">
  <div class="col-lg-6 text-center">
    <h2><b>SignUp On CampusAura</b></h2>
  </div>
  <div class="row mt-3">
    <form
      action="/user/signup"
      method="post"
      class="needs-validation col-lg-6"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="mb-3 mt-2">
        <label for="username" class="form-label">Username:</label>
        <input type="text" name="username" class="form-control" required />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="name" class="form-label">Full Name:</label>
        <input type="text" name="name" class="form-control" required />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="email" class="form-label">Email:</label>
        <input type="email" name="email" class="form-control" required />
        <div class="invalid-feedback">Email is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="year" class="form-label">Year:</label>
        <select name="year" class="form-control" required>
          <option value="" disabled selected>Select Year</option>
          <option value="First">First</option>
          <option value="Second">Second</option>
          <option value="Third">Third</option>
          <option value="Fourth">Fourth</option>
        </select>
        <div class="invalid-feedback">Year is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="branch" class="form-label">Branch:</label>
        <select name="branch" class="form-control" required>
          <option value="" disabled selected>Select Branch</option>
          <option value="CSE">Computer Science and Engineering</option>
          <option value="ECE">Electronics and Communication Engineering</option>
          <option value="ME">Mechanical Engineering</option>
        </select>
        <div class="invalid-feedback">Branch is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="type" class="form-label">User Type:</label>
        <select name="type" class="form-control" required>
          <option value="" disabled selected>Select UserType</option>
          <option value="Student">Student</option>
          <option value="Faculty">Faculty</option>
        </select>
        <div class="invalid-feedback">UserType is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="contact" class="form-label">Contact No:</label>
        <input type="number" name="contact" class="form-control" required />
        <div class="invalid-feedback">Contact Number is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="idCard" class="form-label">ID Card</label>
        <input type="file" name="idCard" class="form-control" required />
        <div class="invalid-feedback">ID Card is required!</div>
      </div>
      <div class="mb-3 mt-2">
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="password" class="form-control" required />
        <div class="invalid-feedback">Enter Password</div>
      </div>
      <button type="submit" class="btn btn-dark add-btn btn-lg mt-3">
        SignUp
      </button>
    </form>
  </div>
</div>
