<% layout('/layouts/boilerplate') -%>
  <body>
    <div class="row  mt-3">
      <div class="col-8">
        <br><br>
    <h3>Complaints And Suggestions:</h3>

    <form action="/complaints?_method=PUT" method="post" class="needs-validation" novalidate>     
      <div class="mb-3 mt-2">
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="complaint[title]" class="form-control" required/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="complaint[description]" placeholder="Enter description"  class="form-control" required></textarea>
      </div>

    <div class="mb-3 mt-2">
        <label for="type" class="form-label">Type</label>
        <select name="complaint[type]" class="form-control" required>
            <option value="" disabled selected>What to do ?</option>
            <option value="Suggestion">Suggestion</option>
            <option value="Complaint">Complaint</option>
        </select>
        <div class="invalid-feedback">Type is required!</div>
    </div>
      <button type="submit" class="btn btn-dark add-btn btn-lg  mt-3">Send</button>
    </form>
    </div>
  </div>
  </body>
</html>
